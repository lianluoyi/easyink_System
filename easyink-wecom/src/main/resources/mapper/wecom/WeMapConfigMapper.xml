<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easyink.wecom.mapper.WeMapConfigMapper">

    <resultMap type="com.easyink.wecom.domain.entity.WeMapConfig" id="WeMapConfigResult">
        <id property="id" column="id"/>
        <result property="corpId" column="corp_id"/>
        <result property="apiKey" column="api_key"/>
        <result property="iframeApiKey" column="iframe_api_key"/>
        <result property="mapType" column="map_type"/>
        <result property="dailyLimit" column="daily_limit"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="getDefaultConfig" resultMap="WeMapConfigResult">
        SELECT *
        FROM we_map_config
        WHERE corp_id = ''
          AND map_type = #{mapType}
          AND status = 1
    </select>

    <select id="getCorpConfig" resultMap="WeMapConfigResult">
        SELECT *
        FROM we_map_config
        WHERE corp_id = #{corpId}
          AND map_type = #{mapType}
          AND status = 1
    </select>

</mapper> 